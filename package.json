{
  "name": "ts-starter",
  "version": "0.0.1",
  "description": "typescript starter project",
  "keywords": [
    "typescript",
    "starter"
  ],
  "author": "Regev Brody <regevbr@gmail.com>",
  "license": "ISC",
  "engineStrict": true,
  "engines": {
    "node": "^12",
    "yarn": "^1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PruvoNet/ts-starter.git"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.d.ts",
    "dist/**/*.js"
  ],
  "scripts": {
    "preinstall": "node -e \"if(!/yarn\\.js$/.test(process.env.npm_execpath))throw new Error('Use yarn')\"",
    "postinstall": "test -n \"$DOCKER_ENV\" ||  yarn run build",
    "clean:dist": "rm -rf dist && rm -f .buildcache",
    "prebuild": "yarn run clean:dist",
    "build": "yarn run tsc -p tsconfig.json",
    "start": "yarn node dist/index.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-prefer-arrow": "^1.2.1",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@types/compression": "^1.7.0",
    "@types/hapi__joi": "^17.1.4",
    "@types/lusca": "^1.6.2",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "express-joi-validation": "^4.0.4-beta.0",
    "express-joi-validator": "^2.0.1",
    "lusca": "^1.6.1",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "squiss-ts": "^4.1.1"
  }
}
